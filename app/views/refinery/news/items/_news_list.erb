<div class="b-news">

  <% @items.each do |item| %>
      <article class="b-news__item">
        <div class="b-news__item__t">
          <%= link_to item.title, refinery.news_item_path(item) %>
        </div>
        <p class="b-news__item__date"><%= l item.publish_date, format: "%e %B" %></p>
        <% if item.images.any? %>
            <img src="<%= item.images.first.thumbnail("110x79").url %>" alt="" class="b-news__item__pic" />
        <% end %>
        <div class="text" >
          <%= raw truncate(strip_tags(item.body), :length => 300, :separator => ' ',
                           :omission => " ...&nbsp#{link_to t('.read_more'), refinery.news_item_path(item), {class: "b-more"}}",
                           :preserve_html_tags => false) %>
        </div>
      </article>
  <% end %>
</div>