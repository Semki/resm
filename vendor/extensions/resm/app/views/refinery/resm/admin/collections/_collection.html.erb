<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(collection) -%>">
  <span class='title'>
    <%= collection.name %>

    <% if Refinery.i18n_enabled? and Refinery::I18n.frontend_locales.many? %>
      <span class='preview'>
        <% collection.translations.each do |translation| %>
          <% if translation.name.present? %>
            <%= link_to refinery_icon_tag("flags/#{translation.locale}.png", :size => '16x11'),
                         refinery.edit_resm_admin_collection_path(collection, :switch_locale => translation.locale),
                         :class => 'locale' %>
          <% end %>
        <% end %>
      </span>
    <% end %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.resm_collection_path(collection),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_resm_admin_collection_path(collection),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.resm_admin_collection_path(collection),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => collection.name),
        :method => :delete %>
  </span>
</li>
