<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(lot) -%>">
  <span class='title'>
    <%= lot.lot_code %>

    <% if Refinery.i18n_enabled? and Refinery::I18n.frontend_locales.many? %>
      <span class='preview'>
        <% lot.translations.each do |translation| %>
          <% if translation.lot_code.present? %>
            <%= link_to refinery_icon_tag("flags/#{translation.locale}.png", :size => '16x11'),
                         refinery.edit_resm_admin_lot_path(lot, :switch_locale => translation.locale),
                         :class => 'locale' %>
          <% end %>
        <% end %>
      </span>
    <% end %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.resm_lot_path(lot),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_resm_admin_lot_path(lot),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.resm_admin_lot_path(lot),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => lot.lot_code),
        :method => :delete %>
  </span>
</li>
