<%= form_for [refinery, :resm_admin, @collection] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @collection,
              :include_object_name => true %>

  <%= render "locale_picker",
              :current_locale => Thread.current[:globalize_locale] if Refinery.i18n_enabled? %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.collections.admin.collections.collection'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @collection.name) %>
<% end -%>
