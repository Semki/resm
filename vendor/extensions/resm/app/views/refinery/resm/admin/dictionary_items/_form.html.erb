<%= form_for [refinery, :resm_admin, @dictionary_item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @dictionary_item,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :key -%>
    <%= f.text_field :key, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :value -%>
    <%= f.text_field :value  -%>

  </div>
  
  <div class='field'>
    <%= f.label :parent -%>
    <%= f.select :parent_id, options_from_collection_for_select(Refinery::Resm::DictionaryItem.all, :id, :key), {include_blank: true}  -%>

  </div>
  
  <div class='field'>
    <%= f.label :dictionary -%>
    <%= f.select :dictionary_id, options_from_collection_for_select(Refinery::Resm::Dictionary.all, :id, :name)  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.dictionary_items.admin.dictionary_items.dictionary_item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @dictionary_item.key) %>
<% end -%>
