<%= form_for [refinery, :resm_admin, @dictionary_item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @dictionary_item,
              :include_object_name => true %>

  <%= render "locale_picker",
              :current_locale => Thread.current[:globalize_locale] if Refinery.i18n_enabled? %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :dictionary_id -%>
    <%= f.number_field :dictionary_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :key -%>
    <%= f.text_field :key  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.dictionary_items.admin.dictionary_items.dictionary_item'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @dictionary_item.name) %>
<% end -%>
