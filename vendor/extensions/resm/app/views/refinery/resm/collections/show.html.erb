<% content_for :body_content_title do %>
  <%= @collection.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @collection.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="collections">
      <% @collections.each do |collection| %>
        <li>
          <%= link_to collection.name, refinery.resm_collection_path(collection) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
