<% content_for :body_content_title do %>
  <%= @collection_item.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Collection</h1>
    <p>
      <%=raw @collection_item.collection %>
    </p>
  </section>
  <section>
    <h1>Dictionary Item</h1>
    <p>
      <%=raw @collection_item.dictionary_item %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="collection_items">
      <% @collection_items.each do |collection_item| %>
        <li>
          <%= link_to collection_item.title, refinery.resm_collection_item_path(collection_item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
