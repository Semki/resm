<% content_for :body_content_title do %>
  <%= @real_estate_object.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @real_estate_object.name %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @real_estate_object.price %>
    </p>
  </section>
  <section>
    <h1>Collection</h1>
    <p>
      <%=raw @real_estate_object.collection.blank? ? t(:empty_collection_name) : @real_estate_object.collection.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="real_estate_objects">
      <% @real_estate_objects.each do |real_estate_object| %>
        <li>
          <%= link_to real_estate_object.name, refinery.resm_real_estate_object_path(real_estate_object) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
