<% content_for :body_content_title do %>
  <%= @dictionary.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @dictionary.name %>
    </p>
  </section>
  <section>
    <h1>Key</h1>
    <p>
      <%=raw @dictionary.key %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="dictionaries">
      <% @dictionaries.each do |dictionary| %>
        <li>
          <%= link_to dictionary.name, refinery.resm_dictionary_path(dictionary) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
