<% content_for :body_content_title do %>
  <%= @collection.tag %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Tag</h1>
    <p>
      <%=raw @collection.tag %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="collections">
      <% @collections.each do |collection| %>
        <li>
          <%= link_to collection.tag, refinery.collections_collection_path(collection) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
