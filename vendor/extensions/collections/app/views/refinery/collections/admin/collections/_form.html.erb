<%= form_for [refinery, :collections_admin, @collection] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @collection,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :tag -%>
    <%= f.text_field :tag, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.collections.admin.collections.collection'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @collection.tag) %>
<% end -%>
