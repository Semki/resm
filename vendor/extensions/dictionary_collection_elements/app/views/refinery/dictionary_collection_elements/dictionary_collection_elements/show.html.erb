<% content_for :body_content_title do %>
  <%= @dictionary_collection_element.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Dictionary</h1>
    <p>
      <%=raw @dictionary_collection_element.dictionary %>
    </p>
  </section>
  <section>
    <h1>Collection</h1>
    <p>
      <%=raw @dictionary_collection_element.collection %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="dictionary_collection_elements">
      <% @dictionary_collection_elements.each do |dictionary_collection_element| %>
        <li>
          <%= link_to dictionary_collection_element.title, refinery.dictionary_collection_elements_dictionary_collection_element_path(dictionary_collection_element) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
